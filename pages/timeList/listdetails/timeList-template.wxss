.row1{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #76c1c667;
}

.row2{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #86b38607;
}

.box{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  border:1px solid #d9d9d9;
  white-space: nowrap; /*强制不换行*/
  overflow: hidden;    /*超出一行文字自动隐藏*/
  text-overflow: ellipsis;  /*文字隐藏后显示省略号*/
}
.box::after{
  position: absolute;
  height:1px;
  content: '';
  width:1rpx;
  height:100%;
  top:0rpx;
  right:0rpx;
}
