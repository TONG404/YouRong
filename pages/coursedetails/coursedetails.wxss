/* miniprogram/pages/coursedetails/coursedetails.wxss */

/*@auther 施雅昕*/

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.vcoursename{
  display: flex;
  margin-top: 20rpx;
}
.coursename{
  height: 100rpx;
  margin-top: 20rpx;
  background-color: #76C1C6;
  color:#fff;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
}

.vcoursetime{
  display: flex;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.coursetime{
  font-size: 40rpx;
  font-weight: 500;
}
.vteacher{
  display: flex;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.teacher{
  font-size: 40rpx;
  font-weight: 500;
}
.vplace{
  display: flex;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.place{
  font-size: 40rpx;
  font-weight: 500;
}
.vgrade{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.grade{
  font-size: 40rpx;
  font-weight: 500;
}
.eachgrade{
  display: flex;
  flex-direction: column;
}
.gradetitle{
  display: flex;
  flex-direction: row;
  align-items: center;
}

/*饼状图*/
.vphoto{
  display: flex;
  margin-top: 25rpx;
  margin-left: 20rpx;
}
.photo{
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.vbtn{
  margin-top: 40rpx;
}
.btn{
  height: 100rpx;
  margin-top: 30rpx;
  background-color: #76C1C6;
  color:white;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 700;
}

.vbtn1{
  margin-top: 100rpx;
}
.btn1{
  height: 70rpx;
  margin-top: 100rpx;
  background-color: #76C1C6;
  color:white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 400;
}

/*输入框*/
.commendbox{                /*写评论模块*/
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}
.commendinput{             /*输入框容器*/
height:30px;
width:600rpx;
margin:20rpx 0 10rpx 20rpx;
}
.sendbtn{               /*按钮容器*/
  height:30px;
  width: 170rpx;
  margin:20rpx 20rpx 10rpx 15rpx;
} 
.commend{        /*输入框*/
  height: 30px;
  width: 500rpx;
  line-height: 15px;   /*使文字水平居中*/
  border:0.5px solid #2f4f4f;
  border-radius: 30rpx;
}
.send{           /*按钮*/
  size:mini;
  height:30px;
  background-color: #76C1C6;
  color:#fff;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 15px;   /*使文字水平居中*/
}

/*展示框*/
.vshowtext{
  background-color: #76c1c660;
  height: 100rpx;
  margin-top: 20rpx;
}
