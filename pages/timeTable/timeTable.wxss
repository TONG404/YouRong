.fb-type{
  height: 104rpx;
  width: 100%;
  background: rgba(0,0,0,0);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fb-type .type-label{
  height: 36rpx;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.btncontain1{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 100rpx;
  margin-left: 80rpx;
  z-index: 99999;
  font-size: 40rpx;
}
.btncontain2{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 30rpx;
  margin-left: 80rpx;
  z-index: 99999;
  font-size: 40rpx;
}
.btn{
  border-radius: 20rpx;
  background-color: #76C1C6;
  line-height: 14rpx;
  color:#315052;
  border:1px solid #fff;
}
.top{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.week{
  font-size: 10pt;
  font-weight: bold;
  color:#22393a;
  text-align: center;
  margin-right: 10rpx;
}
.weekday{
  display: flex;
  flex-direction: row;
  background-color: #76C1C6;
  color: #22393a;
}
.top-text{
  width: 99rpx;
  height: 35rpx;
  font-size: 24rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}
.left{
  width: 67rpx;
  height:60rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items:top;
}
.flex-item {
  width: 95rpx;
  height: 100px;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.card{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding-left: 2px;
}
.scroll {
  height: 1170rpx;
  z-index: 101;
  position: fixed;
}
.box1 .dateBox{
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-top: 20px;
  font-size: 40rpx;
}

.box1{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.box1>view{
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 34rpx;
}

.dateOn{
  border-radius: 50%;
  background-color: hotpink;
  color: #fff;
}
.ball {
  box-shadow:2px 2px 10px #AAA;
  border-radius: 20px;
  position: absolute; 
}
.font-color{
  color:#a9a9a9;
}